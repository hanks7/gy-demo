<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@mipmap/login_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_login_protect"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/login_btn_bg"
            android:text="登录保护"
            android:textColor="@color/color_login_login" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_register_protect"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_btn_bg"
            android:text="注册保护"
            android:textColor="@color/color_login_login" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_nonsense"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_btn_bg"
            android:text="@string/nonsense_login"
            android:textColor="@color/color_login_login" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_picVerify"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_btn_bg"
            android:text="@string/pic_verify_login"
            android:textColor="@color/color_login_login" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_cloud_verify"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/login_btn_bg"
            android:text="云短信验证"
            android:textColor="@color/color_login_login" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_pre_login"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/login_btn_bg"
            android:text="预登录"
            android:visibility="gone"
            android:textColor="@color/color_login_login" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_e_login"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/login_btn_bg"
            android:text="一键登录"
            android:textColor="@color/color_login_login" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_e_login_dialog"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/login_btn_bg"
            android:text="一键登录(弹窗模式)"
            android:textColor="@color/color_login_login" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_phone_verify"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/login_btn_bg"
            android:text="本机号码验证"
            android:textColor="@color/color_login_login" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="版本：1.3.2"
        android:textColor="@color/white" />

</RelativeLayout>